#include "stm32l4_spi_driver.h"
#include "uart_driver.h"
#include <stdio.h>

int main(void)
{
    SPI1_Init();     // Initialize SPI
    UART2_Init();    // Initialize UART for debugging

    uint8_t tx_data = 0x55;
    uint8_t rx_data;
    char buf[30];

    // Loopback test: connect MOSI -> MISO
    while(1)
    {
        rx_data = SPI1_TransmitReceive(tx_data);

        sprintf(buf, "TX=0x%02X, RX=0x%02X\r\n", tx_data, rx_data);
        UART2_WriteString(buf);

        for(int i=0;i<100000;i++); // simple delay
    }
}
