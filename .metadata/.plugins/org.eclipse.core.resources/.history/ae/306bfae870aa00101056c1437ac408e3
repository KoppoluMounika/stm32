#include "lcd.h"
#include "ultrasonic.h"

int main(void)
{
    LCD_Init();
    Ultrasonic_Init();

    LCD_SetCursor(0,0);
    LCD_Print("Ultrasonic Ready");

    while(1)
    {
        uint32_t dist = Measure_Distance_cm();
        LCD_Clear();
        LCD_SetCursor(0,0);

        if(dist < 20)
            LCD_Print("Object Detected");
        else
            LCD_Print("Object Exit");

        for(volatile int i=0;i<1000000;i++); // simple delay
    }
}
