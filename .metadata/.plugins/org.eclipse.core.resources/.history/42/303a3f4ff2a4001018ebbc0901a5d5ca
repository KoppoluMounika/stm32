#include "stm32l4xx.h"
#include "gpio_driver.h"

#define LED_PIN 5

int main()
{
    // Initialize PA5 as output, push-pull, no pull, high speed
    GPIO_Init(GPIOA, LED_PIN, GPIO_MODE_OUTPUT, GPIO_OTYPE_PP, GPIO_NOPULL, GPIO_SPEED_HIGH);

    while(1)
    {
        GPIO_TogglePin(GPIOA, LED_PIN);
        for(int i=0;i<1000000;i++); // crude delay
    }
}

