#include "stm32l476xx.h"
#include "lcd.h"
#include "ultrasonic.h"

int main(void)
{
    LCD_Init(GPIOA, (1<<8), GPIOA, (1<<9),
             GPIOB, (1<<3), GPIOB, (1<<2),
             GPIOB, (1<<1), GPIOB, (1<<0));

    Ultrasonic_Init();

    LCD_Clear();
    LCD_SetCursor(0,0);
    LCD_Print("Ultrasonic Ready");

    while(1)
    {
        uint32_t dist = Measure_Distance_cm();
        LCD_Clear();
        LCD_SetCursor(0,0);
        if(dist > 0 && dist < 20)
            LCD_Print("Object Detected");
        else
            LCD_Print("Object Exit");

        for(volatile int i=0;i<500000;i++); // simple delay
    }
}
