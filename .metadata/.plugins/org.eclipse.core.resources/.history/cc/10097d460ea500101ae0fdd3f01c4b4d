#include "04_SPI_Interrupt/Drivers/Inc/stm32_spi_interrupt.h"

#define USER_BUTTON_PIN 13
#define LED_PIN 5

void GPIO_Init(void) {
    RCC->AHB2ENR |= RCC_AHB2ENR_GPIOAEN | RCC_AHB2ENR_GPIOCEN;

    // LED PA5 output
    GPIOA->MODER &= ~(3<<(LED_PIN*2));
    GPIOA->MODER |=  (1<<(LED_PIN*2));

    // User button PC13 input
    GPIOC->MODER &= ~(3<<(USER_BUTTON_PIN*2));
}

int main(void) {
    GPIO_Init();
    SPI1_Init();

    uint8_t tx = 0x55;

    while(1) {
        if (!(GPIOC->IDR & (1<<USER_BUTTON_PIN))) {
            GPIOA->ODR ^= (1<<LED_PIN); // blinking LED if button pressed
        }

        SPI1_TransmitReceive(tx);

        for (volatile int i=0; i<500000; i++); // simple delay
    }
}

